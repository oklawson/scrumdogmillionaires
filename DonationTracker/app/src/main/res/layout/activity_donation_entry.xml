<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.DonationEntryActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/shortDescription"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/fullDescription"
        android:layout_width="233dp"
        android:layout_height="39dp"
        android:layout_marginBottom="146dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="1dp"
        android:padding="20px"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="233dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="78dp"
        android:padding="20px"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/dollarValue"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="78dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/comments"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="78dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="87dp"
        android:layout_height="19dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="246dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="65dp"
        android:text="Name of Item"
        app:layout_constraintBottom_toTopOf="@+id/shortDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="263dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="25dp"
        android:text="Comments"
        app:layout_constraintBottom_toTopOf="@+id/comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortDescription" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="53dp"
        android:layout_height="19dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="280dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="11dp"
        android:text="Price"
        app:layout_constraintBottom_toTopOf="@+id/dollarValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comments" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:layout_marginEnd="243dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="6dp"
        android:text="Item Category"
        app:layout_constraintBottom_toTopOf="@+id/category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dollarValue" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="225dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="13dp"
        android:text="Long Description"
        app:layout_constraintBottom_toTopOf="@+id/fullDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category" />

    <TextView
        android:id="@+id/addedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added!"
        android:visibility="gone"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="514dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Donation"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="539dp" />

</android.support.constraint.ConstraintLayout>